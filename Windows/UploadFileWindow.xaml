<Window x:Class="SimpleBlobUtility.Windows.UploadFileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleBlobUtility"
        mc:Ignorable="d"
        Background="#0B7A75"
        Title="Upload File to Azure Container" Height="166" Width="550">
    <Grid>

        <Label Content="File:" HorizontalAlignment="Left" Margin="29,62,0,0" VerticalAlignment="Top" FontSize="16" Foreground="White"/>
        <TextBox x:Name="txtFilePath" HorizontalAlignment="Left" Margin="84,62,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="353" Height="33" FontSize="16"/>
        <Button x:Name="btnSelect" Content="Select" HorizontalAlignment="Left" Margin="451,60,0,0" VerticalAlignment="Top" Height="35" Width="74" Click="btnSelect_Click" FontSize="16"/>
        <Button Content="Upload" HorizontalAlignment="Left" Margin="451,19,0,0" VerticalAlignment="Top" Height="34" Width="74" Click="Button_Click" FontSize="16"/>

        <Button x:Name="btnListContainers" Content="List Containers" HorizontalAlignment="Left" Margin="58,273,0,0" VerticalAlignment="Top" Height="35" Width="163" Click="btnListContainers_Click" FontSize="16" Visibility="Hidden"/>
        <Label x:Name="lblResult" Content="                    " HorizontalAlignment="Left" Margin="29,19,0,0" VerticalAlignment="Top" Background="#0B7A75" Foreground="White" Width="408"/>

    </Grid>
</Window>
